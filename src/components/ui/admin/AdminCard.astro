---
interface Props {
    name: string;
    path: string;
}

const {name, path} = Astro.props;
---

<a href = {path} class = "border border-white/10 bg-white/5 flex flex-col items-center no-underline text-2xl gap-y-2 p-4 w-40">

    <span class = "flex-none">{name}</span>
    <div class = "flex-grow flex w-full h-full">
        <slot/>
    </div>
</a>

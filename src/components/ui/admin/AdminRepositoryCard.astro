---
import type {AdminRepository, SimpleSponsor, Sponsor} from "../../../lib/types";
import {actions} from "astro:actions";
import TagBadge from "../TagBadge.astro";
interface Props {
    repository: AdminRepository,
    sponsors: { id:string, name:string }[]
}
const {repository, sponsors} = Astro.props;
---

<div class:list = {["p-4 w-full border border-white/10 bg-white/5 relative", {"bg-red-900 bg-opacity-25": repository.invalid}]}>
    {
        repository.submitter && <a class = "bg-neutral-900 p-1 absolute -top-4 -left-4 flex gap-x-1 text-xs border border-white/10 no-underline hover:border-orange-600 transition-transform hover:scale-125" href = `https://github.com/${repository.submitter.username}` target = "_blank" rel="noreferrer">

                <img src = {repository.submitter.avatar} alt = {repository.submitter.username} class = "w-4 h-4 rounded-full my-auto"/>

                <span>{repository.submitter.username} submitted</span>

            </a>
    }

    {repository.reviewedBy &&
            <div class = "bg-neutral-900 p-1 absolute -top-4 -right-4 flex gap-x-1 text-xs border border-white/10 select-none transition-transform hover:scale-125">
                <img src = {repository.reviewedBy.avatar} alt = {repository.reviewedBy.username} class = "w-4 h-4 rounded-full my-auto"/>

                <span>{repository.reviewedBy.username} reviewed</span>
            </div>
    }


    <div class = "flex gap-x-2">
        <img src = {repository.ownerAvatarUrl} alt = {repository.owner} class = "w-16 h-16 rounded-full"/>
        <div class = "flex flex-col gap-y-1 flex-grow">
            <a href = {repository.ownerHtmlUrl}  target = "_blank" rel="noreferrer">{repository.owner}</a>

            <a href = {repository.url}  target = "_blank" rel="noreferrer">{repository.name}</a>


            <p>ID: {repository.id}</p>
            <p>GHID: {repository.repository_id}</p>

            {repository.description &&
                    <div class = "p-2 font-mono break-all bg-white bg-opacity-5">
                        {repository.description}
                    </div>
            }

            {repository.tags && repository.tags.length !== 0 &&
                    <div class = "flex gap-2 flex-wrap">{repository.tags.map(tag => <TagBadge>{tag}</TagBadge>)}</div>}

            {
                repository.invalid &&
                    <div class = "flex-grow w-full text-white bg-opacity-10 bg-white p-1">
                        <p>
                            This repository has been denied:
                        </p>
                        <code class = "break-words">
                            {repository.reason}
                        </code>
                    </div>
            }
            <div class = "flex gap-x-2">
                {repository.invalid &&
                        <form method = "POST" action = {actions.repository.approve} class = "w-full">
                            <input type = "hidden" value = {repository.repository_id} name = "id"/>
                            <button type = "submit" class = "w-full text-center border border-emerald-400 bg-emerald-900 hover:bg-emerald-700 no-underline block">Approve</button>
                        </form>}
                <form method = "POST" action = {actions.repository.delete} class = "w-full">
                    <input type = "hidden" value = {repository.repository_id} name = "id"/>
                    <button type = "submit" class = "w-full text-center border border-rose-400 bg-rose-900 hover:bg-rose-700 no-underline block">Delete</button>
                </form>
            </div>
            <div class = "flex gap-x-2">
                {repository.sponsor ? <form method = "POST" action = {actions.repository.unsponsor} class = "w-full flex gap-x-2">
                    <input type = "hidden" value = {repository.repository_id} name = "repository_id"/>
                    <button type = "submit" class = "w-full text-center border border-primary bg-primary/10 hover:bg-primary hover:text-black no-underline block">Unsponsor</button>
                </form>  : <form method = "POST" action = {actions.repository.sponsor} class = "w-full flex gap-x-2">
                    <input type = "hidden" value = {repository.repository_id} name = "repository_id"/>
                    <select name="sponsor_id" id="sponsor_id" class="bg-transparent focus:bg-primary/10 outline outline-white/10 focus:outline-primary w-full">
                        <option label=""></option>
                        {sponsors.sort((a, b) => a.name.localeCompare(b.name)).map(sponsor => <><option value={sponsor.id} class="text-black">{sponsor.name}</option> </>)}
                    </select>
                    <button type = "submit" class = "w-full text-center border border-primary bg-primary/10 hover:bg-primary hover:text-black no-underline block">Sponsor</button>
                </form> }

            </div>
        </div>
    </div>
</div>

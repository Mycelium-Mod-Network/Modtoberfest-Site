---
import {isUserAdmin} from "@lib/util";
import PageTitle from "@components/ui/PageTitle.astro";
import Layout from "@layouts/Layout.astro";
import {actions} from "astro:actions";
import prisma from "@lib/db";
import ActionResult from "@components/ui/ActionResult.astro";

const user = Astro.locals.user;
if (!isUserAdmin(user)) {
    return Astro.redirect("/403?url=/admin/users")
}

const {id} = Astro.params
const reward = await prisma.reward.findUnique({
    where: {
        id: id
    }
})
if (!reward) {
    return Astro.redirect("/admin/rewards?error=not_found")
}
---
<Layout title = `Add ${reward.title} codes` description = `Add ${reward.title} codes` canonical = `/admin/rewards/${id}/codes/add` currentPage="admin">
    <div class = "mx-auto max-w-none">
        <ActionResult action={actions.rewards.add_codes}/>
        <PageTitle>Add {reward.title} codes </PageTitle>
        <form method="post" action={`/admin/rewards/${id}/codes` + actions.rewards.add_codes} class="flex flex-col gap-2 my-2">
            <input type="hidden" name="id" value={reward.id}/>
            <label for="codes">Enter Codes</label>
            <textarea name="codes" id="codes" class="min-h-32 bg-transparent focus:bg-primary/10 outline outline-white/10 focus:outline-primary" required/>
            <button type = "submit" class = "w-full p-1 border text-center font-semibold no-underline hover:border-orange-600 bg-green-500 bg-opacity-25">
                Add codes
            </button>
        </form>
        <a href = `/admin/rewards/${id}/codes` class = "block w-full p-1 border text-center font-semibold no-underline hover:border-orange-600 bg-red-500 bg-opacity-25 hover:text-white"> Cancel </a>

    </div>

</Layout>

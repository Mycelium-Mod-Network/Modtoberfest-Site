---
import {isUserAdmin} from "@lib/util";
import PageTitle from "../../../components/ui/PageTitle.astro";
import Layout from "../../../layouts/Layout.astro";
import {actions} from "astro:actions";
const user = Astro.locals.user;
if (!isUserAdmin(user)) {
    return Astro.redirect("/403?url=/admin/users")
}
---
<Layout title = "Create Tag" description = "Create Tag" canonical = "/admin/tags/create" currentPage="admin">
    <div class = "mx-auto max-w-none">
        <PageTitle>Add tag</PageTitle>
        <form action = {"/admin/tags" + actions.tag.create} method = "post" class = "flex flex-col gap-y-2">
            <div class = "grid grid-cols-2 gap-2">
                <label for = "name">Name: <span class = "text-red-500">*</span></label>

                <input type = "text" name = "name" required id = "name" class = "bg-transparent focus:bg-primary/10 outline outline-white/10 focus:outline-primary">

            </div>

            <button type = "submit" class = "w-full p-1 border text-center font-semibold no-underline hover:border-green-600 border-green-500 bg-green-500 bg-opacity-25 hover:bg-opacity-50">
                Add tag
            </button>
            <a href = "/admin/tags" class = "block w-full p-1 border text-center font-semibold no-underline hover:border-red-600 border-red-500 bg-red-500 bg-opacity-25 hover:text-white hover:bg-opacity-50"> Cancel </a>
        </form>


    </div>
</Layout>
